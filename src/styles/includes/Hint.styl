.Hint
  position relative
  max-height 16px

  &_icon
    display inline-grid
    width 16px
    height 16px
    background url("data:image/svg+xml,%3Csvg width='16' height='16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8 .5C3.719.5.25 4 .25 8.25A7.749 7.749 0 0 0 8 16c4.25 0 7.75-3.469 7.75-7.75C15.75 4 12.25.5 8 .5Zm0 3.438A1.32 1.32 0 0 1 9.313 5.25 1.3 1.3 0 0 1 8 6.563c-.75 0-1.313-.563-1.313-1.313A1.3 1.3 0 0 1 8 3.937Zm1.75 7.937a.38.38 0 0 1-.375.375h-2.75a.361.361 0 0 1-.375-.375v-.75a.38.38 0 0 1 .375-.375H7v-2h-.375a.361.361 0 0 1-.375-.375v-.75a.38.38 0 0 1 .375-.375h2c.188 0 .375.188.375.375v3.125h.375c.188 0 .375.188.375.375v.75Z' fill='%2313141A'/%3E%3C/svg%3E") 0 0 no-repeat
    @extend .transition

  &_wrapper
    z-index 100
    position absolute
    top 20px
    right 50%
    transform translateX(50%)
    width 236px
    padding 20px
    border-radius 4px
    background $white
    font-size 16px
    line-height 1.4375
    opacity 0
    visibility hidden
    @extend .transition
    
    @media $mdPlus
      top -25px
      transform translateX(calc(100% + 10px))
    
    &::before
      content ''
      position absolute
      top -11px
      right 0
      left 0
      width 11px
      height 13px
      margin auto
      background url("data:image/svg+xml,%3Csvg width='11' height='13' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M.5 7.366a1 1 0 0 1 0-1.732L8.75.871a1 1 0 0 1 1.5.866v9.526a1 1 0 0 1-1.5.866L.5 7.366Z' fill='%23fff'/%3E%3C/svg%3E") 0 0 no-repeat
    
      @media $smMinus
        transform rotate(90deg)
  
  &_title
    margin-bottom 10px
    font-weight bold
    font-size 16px

  &-opened
    .Hint_icon
      background-image url("data:image/svg+xml,%3Csvg width='16' height='16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8 .5C3.719.5.25 4 .25 8.25A7.749 7.749 0 0 0 8 16c4.25 0 7.75-3.469 7.75-7.75C15.75 4 12.25.5 8 .5Zm0 3.438A1.32 1.32 0 0 1 9.313 5.25 1.3 1.3 0 0 1 8 6.563c-.75 0-1.313-.563-1.313-1.313A1.3 1.3 0 0 1 8 3.937Zm1.75 7.937a.38.38 0 0 1-.375.375h-2.75a.361.361 0 0 1-.375-.375v-.75a.38.38 0 0 1 .375-.375H7v-2h-.375a.361.361 0 0 1-.375-.375v-.75a.38.38 0 0 1 .375-.375h2c.188 0 .375.188.375.375v3.125h.375c.188 0 .375.188.375.375v.75Z' fill='%23F3B25D'/%3E%3C/svg%3E")

    .Hint_wrapper
      top 30px
      opacity 1
      visibility visible

      @media $mdPlus
        top -25px
        transform translateX(calc(100% + 21px))

        &::before
          top 25px
          right auto
          left -9px