.TextAndVideo
  padding 40px 0
  background linear-gradient(285.63deg, #372D25 0%, #563D34 100%)

  @media $smPlus
    padding 60px 0

  @media $mdPlus
    padding 80px 0

  &_wrapper
    @media $smPlus
      display grid
      grid-template-columns 1fr minmax(auto, 738px)
      align-items center
      column-gap 30px

  &_title
    margin-bottom 20px

    @media $smPlus
      align-self end
      margin-bottom 60px
  
  &_imgWrapper
    @media $xs
      margin-bottom 33px

    @media $smPlus
      display grid
      place-content center
      grid-row 1 / 3
      grid-column 2 / 3
      max-height 415px
      overflow hidden
  
  // &_img
  //   @media $smPlus
  //     max-width none
  
  &_btn
    @media $xxs
      width 100%
    
    @media $smPlus
      justify-self start
      align-self start