.PaymentSystem
  display grid
  grid-template-columns 212px 1fr
  grid-template-rows auto 1fr
  gap 16px 33px
  align-items center

  &_imgWrapper
    grid-row 1 / 3
    text-align center
  
  &_title
    font-weight bold
    font-size 23px
    line-height 32px
    font-family $robotoSlab

  &_description
    grid-column 2 / 3
    font-size 18px
    line-height 32px
    letter-spacing -0.005em
  
  &_btn
    grid-column 2 / 3
    justify-self start
  
  &-extended
    .PaymentSystem_imgWrapper
      grid-row 1 / 4