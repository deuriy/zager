.FormText
  width 100%
  height 52px
  padding-right 24px
  padding-left 24px
  border none
  outline none
  border-radius 4px
  background $grey
  font-size 18px
  font-family $baseFont
  letter-spacing -0.005em
  color $dark
  +placeholder()
    color rgba($dark, .6)

  @media $smPlus
    height 64px
  
  &-lightBeigeBg
    background $lightBeige
  
  &-contactForm
    @media $smPlus
      height 52px