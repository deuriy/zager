.MobileNavigation
  padding-bottom 35px
  background $lightBeige
  opacity 0
  visibility hidden
  @extend .transition
  
  @media $sm
    width 375px
    padding-top 3px
    padding-right 11px
    padding-left 27px
  
  @media $xs
    position fixed
    z-index 100
    top 0
    right 0
    bottom 0
    left 0
    overflow-y auto
  
  &_header
    display grid
    justify-content end
    margin-bottom -5px
  
  &_mainMenu
    &::after
      content ''
      display block
      height 1px
      margin 24px 9px 35px 0
      background $grey

      @media $sm
        margin 4px 10px 24px
        background none
  
  &-opened
    visibility visible
    opacity 1