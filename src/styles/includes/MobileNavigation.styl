.MobileNavigation
  position fixed
  z-index 100
  top 0
  right 0
  bottom 0
  left 0
  padding-bottom 35px
  background $lightBeige
  opacity 0
  visibility hidden
  overflow-y auto
  @extend .transition
  
  &_header
    display grid
    justify-content end
    margin-bottom -5px
  
  &_mainMenu
    &::after
      content ''
      display block
      height 1px
      margin 24px 9px 35px 0
      background $grey
  
  &-opened
    visibility visible
    opacity 1