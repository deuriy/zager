.Tabs
  &_content
    display none

    &-active
      display block
    
  &_seriesImgWrapper
    padding 40px 20px 32px
    text-align center

  &-seriesStyle
    .Tabs_list
      list-style none
      display grid
      grid-template-columns repeat(auto-fit, minmax(70px, 1fr))
    
    .Tabs_item
      padding 11px 10px
      border-bottom 1px solid $grey
      background rgba($grey, 0.15)
      font-weight bold
      font-size 14px
      line-height 20px
      font-family $robotoSlab
      letter-spacing 0.06em
      text-align center
      text-transform uppercase
      cursor pointer
      @extend .transition
      
      &:not(:last-child)
        border-right 1px solid $grey
      
      &:first-child
        border-radius 4px 0 0 0
      
      &:last-child
        border-radius 0 4px 0 0

      &:hover,
      &-active
        background $yellow
        color $lightBeige
      
      &-active
        box-shadow 1px 0 0 rgba(0, 0, 0, 0.03)