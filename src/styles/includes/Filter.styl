.Filter
  &_title
    margin-bottom 25px
    font-weight bold
    font-size 23px
    line-height 1.392
    font-family $robotoSlab

    @media $smPlus
      margin-bottom 20px
      font-size 18px
      line-height 1.157894
  
  &_label
    margin-bottom 15px
    font-weight bold
    font-size 14px
    line-height 1.571428em
  
  &_checkboxList
    width 198px
    margin-bottom 40px
    margin-left 3px

    @media $smPlus
      width 194px

    &:last-child
      margin-bottom 0
  
  &_actions
    display grid
    row-gap 10px
  
  &_resetBtn
    width 100%
    padding 16px 28px
    border none
    background transparent
    font-weight bold
    font-family $robotoSlab
    font-size 16px
    line-height 20px
    letter-spacing 0.06em
    text-transform uppercase
    cursor pointer