.SeriesBlock
  position relative
  width 246px
  text-align center

  &_label,
  &_title
    position relative

  &_label
    margin-bottom 21px
  
  &_title
    display inline-block
    width 144px
    font-family $robotoSlab
    font-size 23px
    line-height 1.3913
    text-align center
  
  &_description
    position absolute
    right 10px
    bottom 10px
    left 10px
    padding 11px 20px 10px
    background $lightBeige
    border-radius 0 0 4px 4px
    font-size 16px
    line-height 1.625
    letter-spacing 0.005em
  
  &_imgWrapper
    margin-top -101px
  
  &_img
    display block
    border-radius 4px