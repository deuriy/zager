.SectionTitle
  font-weight bold
  font-size 28px
  line-height 1.5
  font-family $robotoSlab
  
  @media $smPlus
    font-size 32px
    line-height 1.34

  @media $mdPlus
    font-size 36px

  &-center
    text-align center
  
  &-lightBeige
    color $lightBeige
  
  &-textBlocks,
  &-productCards,
  &-feedbackSection,
  &-seriesSection,
  &-videoPlayerSection,
  &-alignLeftXS
    @media $xs
      text-align left
  
  &-large
    font-size 36px
    line-height 64px

    @media $smPlus
      font-size 46px

    @media $mdPlus
      font-size 56px
  
  &-seriesSection
    @media $mdPlus
      line-height 48px
  
  &-articleSection
    @media $smPlus
      font-size 32px
      line-height 44px
  
  &-articleSectionSmallDekstop
    @media $smPlus
      font-size 23px
      line-height 1.392