.CartBtn
  display inline-grid
  grid-template-columns 20px 1fr
  column-gap 0.7142857em
  align-items center
  padding 0.7142857em 1.57142857em
  border 2px solid $dark
  border-radius 2px
  color $dark
  font-size 14px
  font-weight bold
  font-family $robotoSlab
  text-transform uppercase
  letter-spacing 0.06em
  text-decoration none
  @extend .transition
  
  @media $xs
    grid-template-columns 1fr
    width 44px
    height 44px
    padding 10px
    border 1px solid $grey
  
  @media $sm
    padding 11px 6px 10px 11px
    border 1px solid $grey
    border-radius 4px
  
  &::before
    content ''
    width 20px
    height 20px
    background url("data:image/svg+xml,%3Csvg class='SvgIco' width='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath class='SvgIco_path' d='M17.568 5.833A1.667 1.667 0 0 0 16.151 5H5.485L5 3.117a.833.833 0 0 0-.833-.617H2.501a.833.833 0 0 0 0 1.667h1.034l2.3 8.55a.833.833 0 0 0 .833.616h7.5a.832.832 0 0 0 .742-.458l2.733-5.467a1.667 1.667 0 0 0-.075-1.575ZM6.25 17.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5ZM14.586 17.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5Z' fill='%2313141A'%3E%3C/path%3E%3C/svg%3E") 0 0 no-repeat
    @extend .transition

  &:hover
    background-color $dark
    color $lightBeige

    &::before
      background-image url("data:image/svg+xml,%3Csvg class='SvgIco' width='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath class='SvgIco_path' d='M17.568 5.833A1.667 1.667 0 0 0 16.151 5H5.485L5 3.117a.833.833 0 0 0-.833-.617H2.501a.833.833 0 0 0 0 1.667h1.034l2.3 8.55a.833.833 0 0 0 .833.616h7.5a.832.832 0 0 0 .742-.458l2.733-5.467a1.667 1.667 0 0 0-.075-1.575ZM6.25 17.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5ZM14.586 17.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5Z' fill='%23FFFBF6'%3E%3C/path%3E%3C/svg%3E")

    @media $sm
      background $grey
      color $dark

      &::before
        background-image url("data:image/svg+xml,%3Csvg class='SvgIco' width='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath class='SvgIco_path' d='M17.568 5.833A1.667 1.667 0 0 0 16.151 5H5.485L5 3.117a.833.833 0 0 0-.833-.617H2.501a.833.833 0 0 0 0 1.667h1.034l2.3 8.55a.833.833 0 0 0 .833.616h7.5a.832.832 0 0 0 .742-.458l2.733-5.467a1.667 1.667 0 0 0-.075-1.575ZM6.25 17.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5ZM14.586 17.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5Z' fill='%2313141A'%3E%3C/path%3E%3C/svg%3E")