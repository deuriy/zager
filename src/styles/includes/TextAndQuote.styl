.TextAndQuote
  background $lightBeige

  &_wrapper
    display grid
    gap 25px 30px

    @media $smPlus
      grid-template-columns repeat(2, 1fr)

    @media $smMinus
      padding 40px 0
  
  &_title
    align-self end
  
  &_text
    padding-right 10px
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em

    @media $xs
      padding-right 0

    & > p
      margin-bottom 12px

      &:last-child
        margin-bottom 0
  
  &_quoteBlock
    @media $smPlus
      grid-row 1 / 3
      grid-column 2 / 3
      margin-top 60px
      margin-bottom -60px