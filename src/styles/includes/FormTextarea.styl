.FormTextarea
  width 100%
  height 80px
  padding 10px 24px
  border none
  outline none
  border-radius 4px
  background $grey
  font-size 18px
  line-height 32px
  font-family $baseFont
  letter-spacing -0.005em
  color $dark
  resize none
  +placeholder()
    color rgba($dark, .6)
  
  &-lightBeigeBg
    background $lightBeige