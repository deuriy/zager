.TextBlocks
  padding 140px 0 80px
  background $grey

  @media $xs
    padding 40px 0

  &_title,
  &_description
    max-width 100%
    margin-right auto
    margin-left auto
  
  &_title
    width 900px
    margin-bottom 20px

    @media $xs
      margin-bottom 25px
  
  &_description
    margin-bottom 60px
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em

    @media $smPlus
      width 540px
      text-align center
    
    @media $xs
      margin-bottom 51px
  
  &_items
    display grid
    row-gap 60px

    @media $xs
      row-gap 24px
  
  &_item
    @media $xs
      position relative
      padding-bottom 27px
      
      &::after
        content ''
        position absolute
        right 0
        bottom 0
        left 0
        height 2px
        background $lightBeige

      &:last-child
        padding-bottom 0

        &::after
          display none