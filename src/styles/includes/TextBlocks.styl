.TextBlocks
  padding 40px 0
  background $grey

  @media $smPlus
    padding 90px 0 60px

  @media $mdPlus
    padding 140px 0 80px

  &_title,
  &_description
    max-width 100%
    margin-right auto
    margin-left auto
  
  &_title
    width 900px
    margin-bottom 25px

    @media $smPlus
      margin-bottom 20px
  
  &_description
    // margin-bottom 51px
    margin-bottom 25px
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em

    @media $smPlus
      width 540px
      // margin-bottom 60px
      margin-bottom 33px
      text-align center
  
  &_items
    position relative
    display grid
    row-gap 24px
    padding-top 26px
    
    @media $xs
      &::before
        content ""
        position absolute
        top 0
        right 0
        left 0
        height 2px
        background $lightBeige

    @media $smPlus
      row-gap 60px
  
  &_item
    @media $xs
      position relative
      padding-bottom 27px
      
      &::after
        content ''
        position absolute
        right 0
        bottom 0
        left 0
        height 2px
        background $lightBeige

      &:last-child
        padding-bottom 0

        &::after
          display none
  
  &-lightBeigeBg
    background $lightBeige
    
    .TextBlocks_items::before
      @media $xs
        background $grey
    
    .TextBlocks_item
      @media $xs
        padding-bottom 42px
        
        &::after
          background $grey
  
  &-guitarsPage
    @media $smPlus
      padding 60px 0

    @media $mdPlus
      padding 80px 0
  
  &-seriesPage
    // padding-bottom 132px
    padding-bottom 86px
    
    @media $smPlus
      padding 79px 0 174px

    .TextBlocks_title
      margin-bottom 24px

      @media $smPlus
        margin-bottom 45px
    
    .TextBlocks_items
      row-gap 25px

      @media $smPlus
        row-gap 50px