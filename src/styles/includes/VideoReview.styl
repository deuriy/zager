.VideoReview
  width 325px
  max-width 100%

  @media $smPlus
    width 344px
  
  &_imgWrapper,
  &_videoWrapper
    display grid
    max-height 192px
    overflow hidden
  
  &_imgWrapper
    place-content center
  
  &_img
    display block
    border-top-right-radius 4px
    border-top-left-radius 4px
  
  &_textWrapper
    padding 20px
    background $lightBeige
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px

    @media $smPlus
      padding 24px
  
  &_author
    font-weight bold
    font-size 19px
    line-height 24px
    font-family $robotoSlab
  
  &_text
    display -webkit-box
    text-overflow ellipsis
    -webkit-line-clamp 3
    -webkit-box-orient vertical
    word-wrap break-word
    overflow hidden
    font-size 16px
    line-height 1.625
    letter-spacing 0.005em
    
    &-expanded
      -webkit-line-clamp initial
  
  &_moreLink
    text-decoration underline
    color $red
    font-weight bold
    
    &:hover
      text-decoration none