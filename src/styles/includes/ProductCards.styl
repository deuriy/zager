.ProductCards
  &_wrapper
    display grid
    grid-template-columns repeat(auto-fit, minmax(280px, 1fr))
    gap 48px
  
  &_title
    margin-bottom 24px

    @media $smPlus
      margin-bottom 40px

    @media $mdPlus
      margin-bottom 60px
  
  &_swiper
    @media $xs
      margin-right -25px
  
  &-fullWidth
    padding 41px 0
    background linear-gradient(180deg, #ECE2D6 0%, $grey 100%)
    overflow hidden

    @media $smPlus
      padding 60px 0

    @media $mdPlus
      padding 80px 0