.SwitchLink
  display inline-grid
  grid-template-columns 32px 1fr
  align-items center
  gap 15px
  padding 20px 0 19px
  color $dark
  font-weight bold
  font-size 21px
  line-height 32px
  font-family $robotoSlab
  text-decoration none

  @media $mdPlus
    padding 23px 0
    font-size 23px

  &::before
    content ''
    display inline-grid
    width 32px
    height 32px
    border-radius 50%
    background $yellow url("data:image/svg+xml,%3Csvg width='12' height='8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='m11 7.25-5-5-5 5' stroke='%23FFFBF6' stroke-width='2'/%3E%3C/svg%3E") center center no-repeat
    @extend .transition
  
  &:hover
    &::before
      background-color darken($yellow, 10)
  
  &-collapsed
    &::before
      transform rotate(180deg)
  
  &-featuresTable
    @media $mdPlus
      padding-top 16px