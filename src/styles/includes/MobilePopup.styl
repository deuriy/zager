.MobilePopup
	z-index 1000
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	visibility hidden
	opacity 0
	@extend .transition
	
	&_overlay
		content ""
		position fixed
		z-index 1000
		top 0
		left 0
		width 100%
		height 100%
		background rgba($dark, 35%)
		backdrop-filter blur(3px)
		visibility hidden
		opacity 0
		@extend .transition
	
	&_wrapper
		position absolute
		z-index 1000
		right 0
		bottom 0
		left 0
		max-height 100%
		background $lightBeige
		box-shadow 0 -2px 6px -2px rgba(0, 0, 0, 0.1)
		overflow-y auto
		transform translateY(100%)
		transition all .3s ease-in-out
	
	&_header
		display grid
		grid-template-columns 9px 1fr 9px
		align-items center
		column-gap 12px
		min-height 72px
		padding 11px 24px 12px
		border-bottom 1px solid $grey
		text-align center

		&-singleRow
			.MobilePopup_prev,
			.MobilePopup_next
				grid-row 1 / 2
			
			.MobilePopup_title
				margin-bottom 0
	
	&_prev,
	&_next
		grid-row 1 / 3
		width 9px
		height 15px

		&-disabled
			opacity 0.25
	
	&_prev
		background url("data:image/svg+xml,%3Csvg width='9' height='15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M7.417 13.834 1 7.417l6.417-6.416' stroke='%23111013' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E") 0 0 no-repeat
	
	&_next
		grid-column 3 / 4
		background url("data:image/svg+xml,%3Csvg width='9' height='15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='m1.001 1 6.417 6.417-6.417 6.416' stroke='%23111013' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E") 0 0 no-repeat
	
	&_title
		margin-bottom -9px
		font-weight 600
		font-size 18px
		line-height 32px
		letter-spacing -0.005em
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
	
	&_link
		grid-column 2 / 3
		justify-self center
		color $red
		font-size 12px
		line-height 22px
	
	&_body
		padding 25px 28px 23px 22px
	
	&_footer
		padding 0 28px 23px 22px
	
	&-opened
		&,
		.MobilePopup_overlay
			visibility visible
			opacity 1
		
		.MobilePopup_wrapper
			transform translateY(0)