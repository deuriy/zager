.MobilePopup
  z-index 10
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  visibility hidden
  opacity 0
  @extend .transition
  
  &_overlay
    content ""
    position fixed
    z-index 10
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.25)
    backdrop-filter blur(10px)
    visibility hidden
    opacity 0
    @extend .transition

  &_wrapper
    position absolute
    z-index 10
    top 16px
    right 25px
    bottom 16px
    left 25px
    max-height 100%
    border-radius 4px
    background $lightBeige
    overflow-y auto

  &_closeBtn
    position absolute
    top 0
    right 0
  
  &_body
    padding 40px 15px 45px 25px
  
  &-opened
    visibility visible
    opacity 1

    .MobilePopup_overlay
      visibility visible
      opacity 1