.BtnOutline
  display inline-grid
  grid-auto-flow column
  align-items center
  column-gap 9px
  padding 14px 25px 14px 26px
  font-weight bold
  font-family $robotoSlab
  border 2px solid $yellow
  border-radius 4px
  color $yellow
  letter-spacing 0.06em
  text-transform uppercase
  text-decoration none
  @extend .transition
  
  &:hover
    background $yellow
    color $dark
  
  &-video
    &::before
      content ''
      width 21px
      height 20px
      background url("data:image/svg+xml,%3Csvg width='21' height='20' viewBox='0 0 21 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10.5 1.25a8.75 8.75 0 1 0 .001 17.501A8.75 8.75 0 0 0 10.5 1.25Zm2.815 8.885-4.266 3.103a.157.157 0 0 1-.248-.127V6.908a.156.156 0 0 1 .248-.127l4.266 3.102a.155.155 0 0 1 .047.197.156.156 0 0 1-.047.055Z' fill='%23FEBD70'/%3E%3C/svg%3E") center center no-repeat
      @extend .transition
    
    &:hover::before
      background-image url("data:image/svg+xml,%3Csvg width='21' height='20' viewBox='0 0 21 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10.5 1.25a8.75 8.75 0 1 0 .001 17.501A8.75 8.75 0 0 0 10.5 1.25Zm2.815 8.885-4.266 3.103a.157.157 0 0 1-.248-.127V6.908a.156.156 0 0 1 .248-.127l4.266 3.102a.155.155 0 0 1 .047.197.156.156 0 0 1-.047.055Z' fill='%2313141a'/%3E%3C/svg%3E")