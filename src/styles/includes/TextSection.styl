.TextSection
  background $grey

  &_wrapper
    display grid
    gap 24px 50px
    padding 42px 0 40px
    
    @media $smPlus
      // grid-template-columns repeat(2, 1fr)
      grid-template-columns 1fr auto
      padding 80px 0
  
  &_text
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em

    @media $smPlus
      margin-bottom 15px

    & > p
      margin-bottom 12px

      &:last-child
        margin-bottom 0
    
    a
      color $red
      text-decoration none
  
  &_infoBlock
    transform translateY(50%)
  
  &_btn
    @media $xxs
      width 100%
    
    @media $xxsPlus
      justify-self start
  
  &_imgWrapper
    display grid
    place-content center
    place-items center
    border-radius 4px

    @media $smPlus
      grid-row span 3
      margin-top -30px
    
    @media $xxs
      max-height 87vw
      overflow hidden
  
  &_mediaBtn,
  &_img
    grid-area 1 / 1 / 2 / 2
  
  &_img
    display block

    @media $xxs
      max-width 106.2vw
  
  &-article
    @media $xxs
      .TextSection_imgWrapper
        max-height 60vw

      .TextSection_img
        max-width 92.2vw

    @media $smPlus
      .TextSection_wrapper
        column-gap 45px
        padding-bottom 66px

      .TextSection_imgWrapper
        grid-row span 2
  
  &-reverse
    @media $smPlus
      .TextSection_wrapper
        grid-template-columns auto 1fr
        row-gap 7px

      .TextSection_imgWrapper
        grid-row 1 / 3
        margin-top -20px
  
  &-largePaddingDesktop
    @media $smPlus
      .TextSection_wrapper
        padding-top 100px
        padding-bottom 85px
  
  &-largePaddingTop
    .TextSection_wrapper
      padding-top 202px
  
  &-lightBeigeBg
    background $lightBeige
  
  &-titleTop
    @media $smPlus
      .TextSection_title
        grid-column 1 / 3
        margin-bottom 37px
      
      .TextSection_imgWrapper
        grid-row 2 / 4
        grid-column 2 / 3