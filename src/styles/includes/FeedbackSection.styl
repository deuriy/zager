.FeedbackSection
  padding 40px 0
  background $grey
  overflow hidden

  @media $smPlus
    padding 60px 0

  @media $mdPlus
    padding 80px 0

  &_title
    margin-bottom 10px

    @media $smPlus
      margin-bottom 20px

  &_description
    margin-bottom 25px
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em

    @media $smPlus
      margin-bottom 40px
      text-align center