.VideoTile
  display grid
  grid-template-columns 100px 1fr
  align-items center
  width 280px
  max-width 100%
  min-height 100px
  border-radius 4px
  background $lightBeige
  color $dark
  text-decoration none
  @extend .transition
  
  @media $smPlus
    width 344px
  
  &_imgWrapper
    display grid
    place-content center
    border-bottom-left-radius 4px
    border-top-left-radius 4px
    overflow hidden
  
  &_img,
  &_duration
    grid-area 1 / 1 / 2 / 2

  &_img
    display block
    max-width none
    height 100px
  
  &_duration
    align-self end
    justify-self start
    margin-bottom 4px
    margin-left 4px
    padding 2px 9px
    border-radius 2px
    background rgba(0, 0, 0, 0.6)
    color $white
    font-weight bold
    font-size 12px
    letter-spacing 0.005em

  &_title
    padding 11px 14px 11px 11px
    font-size 16px
    line-height 22px

    @media $smPlus
      font-size 19px
      line-height 24px
      font-family $robotoSlab
  
  &-playlist
    grid-template-columns 80px 1fr
    width auto
    min-height 80px
    background $grey

    .VideoTile_title
      font-size 14px
      line-height 18px

      @media $smPlus
        font-family $baseFont
    
    .VideoTile_img
      height 80px
    
  &:hover,
  &-active
    background $yellow