.TextBlock
  display grid
  overflow hidden

  @media $smPlus
    grid-template-columns repeat(2, 1fr)
    justify-content space-between
    column-gap 48px

  &_title
    align-self end
    margin-bottom 26px
    font-size 23px
    line-height 1.392
    font-family $robotoSlab

    @media $smPlus
      margin-bottom 20px
  
  &_text
    // margin-bottom 25px
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em

    @media $smPlus
      font-size 16px
      line-height 1.625
      letter-spacing 0.005em
    
    &:last-child
      margin-bottom 0

    & > p
      margin-bottom 10px

      &:last-child
        margin-bottom 0
  
  &_right
    @media $xs
      order -1
      margin-bottom 25px

  &_imgWrapper
    display grid
    grid-row 1 / 3
    grid-column 2 / 3
    overflow hidden
    
    @media $smPlus
      align-items center
    
    @media $xs
      grid-row 2 / 3
      grid-column auto
      margin-bottom 25px
    
    @media $xxs
      place-content center
      max-height 60vw

  &_img
    display block

    @media $xxs
      max-width 116vw
  
  &_btn
    @media $smPlus
      justify-self start
      align-self start
  
  &-reverse
    @media $smPlus
      .TextBlock_imgWrapper
        grid-column 1
      
      .TextBlock_title
        font-size 24px
        line-height 1.34
      
      // .TextBlock_text
      //   grid-column 2 / 3
      
      .TextBlock_btn
        grid-row 3 / 4
        grid-column 2 / 3
  
  &-extended
    @media $smPlus
      // .TextBlock_text
      //   margin-bottom 0

      .TextBlock_imgWrapper
        grid-row 1 / 4
      
      &.TextBlock-reverse
        .TextBlock_title
          margin-top -2px
        
        // .TextBlock_text
        //   margin-bottom 7px