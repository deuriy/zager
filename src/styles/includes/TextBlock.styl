.TextBlock
  display grid
  grid-template-columns repeat(2, 1fr)
  justify-content space-between
  column-gap 48px
  overflow hidden

  @media $xs
    grid-template-columns 100%
    justify-content stretch

  &_title
    align-self end
    margin-bottom 20px
    font-size 23px
    line-height 1.392
    font-family $robotoSlab

    @media $xs
      margin-bottom 26px
  
  &_text
    font-size 16px
    line-height 1.625
    letter-spacing 0.005em

    @media $xs
      font-size 18px
      line-height 1.78
      letter-spacing -0.005em

    & > p
      margin-bottom 10px

      &:last-child
        margin-bottom 0
  
  &_right
    @media $xs
      order -1
      margin-bottom 25px

  &_imgWrapper
    display grid
    grid-row 1 / 3
    grid-column 2 / 3
    overflow hidden
    
    @media $smPlus
      align-items center
    
    @media $xs
      grid-row 2 / 3
      grid-column auto
      margin-bottom 25px
    
    @media $xxs
      place-content center
      max-height 60vw

  &_img
    display block

    @media $xxs
      max-width 116vw
  
  &-reverse
    @media $smPlus
      .TextBlock_imgWrapper
        grid-column 1
      
      .TextBlock_title
        font-size 24px
        line-height 1.34