  &-smallFontDesktop
    @media $smPlus
      font-size 24px
      line-height 38px
  
  &-largePaddingDesktop
    @media $smPlus
      padding 60px 80px
  
  &-centerDesktop
    @media $smPlus
      text-align center
  
  &-halfOverlapTop
    transform translateY(-50%)
  
  &-halfOverlapBottom
    transform translateY(50%)