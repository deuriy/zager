.InfoLine
  padding 25px
  border-radius 4px
  background $dark
  color $lightBeige
  font-weight bold
  font-size 20px
  line-height 24px
  font-family $robotoSlab

  @media $smPlus
    padding 40px 42px
    font-size 28px
    line-height 32px
  
  &-discount
    display grid
    grid-template-columns auto
    gap 15px
    align-items center

    @media $xs
      justify-items center

    @media $smPlus
      grid-template-columns 32px 1fr
      gap 20px
    
