.ContactForm
  padding 25px
  border-radius 4px
  background $grey

  @media $mdPlus
    padding 40px 60px

  &_title
    margin-bottom 24px
    font-size 23px
    line-height 1.392
    font-family $robotoSlab

    @media $smPlus
      font-size 32px
      line-height 44px
  
  &_items
    display grid
    gap 16px
    margin-bottom 20px
  
  &_btn
    @media $xs
      width 100%