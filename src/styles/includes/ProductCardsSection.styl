.ProductCardsSection
  padding 148px 0 40px
  background $grey

  @media $mdPlus
    padding-top 151px
  
  &_title
    margin-bottom 25px
  
  &_swiper
    @media $xs
      margin-right -25px
      margin-left -25px
      padding-right 25px
      padding-left 25px

  &_groups
    @media $mdPlus
      display grid
      grid-template-columns repeat(auto-fit, 246px)
      justify-content space-between
      gap 20px

  &_group
    margin-bottom 40px

    &:last-child
      margin-bottom 0
  
  &-productPage
    padding-top 40px