.ArrowLink
  display inline-grid
  grid-template-columns auto 14px
  align-items center
  justify-content center
  column-gap 10px
  padding 12px 20px
  font-weight bold
  font-family $robotoSlab
  font-size 14px
  line-height 20px
  letter-spacing 0.06em
  text-transform uppercase
  color $dark
  text-decoration none

  &::after
    content ''
    height 9px
    background url("data:image/svg+xml,%3Csvg width='14' height='9' viewBox='0 0 14 9' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M13 1 7 7 1 1' stroke='%2313141A' stroke-width='2'/%3E%3C/svg%3E") 0 0 no-repeat
    @extend .transition
  
  &-arrowTop
    &::after
      transform rotate(180deg)