.Testimonial
  padding 19px 20px 13px
  border-radius 4px
  background $grey

  &_text
    min-height 86px
    margin-bottom 21px
    font-weight bold
    font-style italic
    line-height 1.5
    letter-spacing 0.005em
  
  &_info
    display grid
    grid-template-columns repeat(2, auto)
    justify-content space-between
    align-items start

    &-noAuthor
      justify-content end
  
  &_author
    display inline-grid
    grid-template-columns auto 1fr
    column-gap 3px
    align-items center
    font-size 14px
    line-height 1.42857

    &::before
      content '-'
  
  &-small
    width 280px
    padding-bottom 21px

    .Testimonial_source
      margin-bottom 11px
      text-align center
    
    .Testimonial_text
      margin-bottom 16px

    .Testimonial_info
      grid-template-columns 100%
      justify-items center