.RatingTile
  display grid
  grid-template-columns auto 1fr 19px
  grid-template-rows auto 1fr
  column-gap 17px
  align-items center
  padding 8px 16px
  border-radius 4px
  background $lightBeige
  color $dark
  text-decoration none

  &:hover
    background darken($lightBeige, 7)

  &::after,
  &_rating
    grid-row 1 / 3

  &::after
    content ''
    width 19px
    height 16px
    background url("data:image/svg+xml,%3Csvg width='19' height='16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='m10.578 1.074 7 7-7 7M0 8.074h16.5' stroke='%2313141A' stroke-width='2'/%3E%3C/svg%3E") 0 0 no-repeat
  
  &_label,
  &_text
    font-size 14px
    line-height 22px
  
  &_label
    grid-row 1 / 2
    grid-column 2 / 3
    font-weight bold
  
  &_text
    grid-row 2 / 3
    grid-column 2 / 3