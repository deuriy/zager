.BtnYellow
  display inline-grid
  grid-auto-flow column
  justify-content center
  align-items center
  column-gap 0.5625em
  max-width 100%
  padding 1em 1.6875em
  font-weight bold
  font-family $robotoSlab
  font-size 16px
  border none
  border-radius 4px
  background $yellow
  color $dark
  letter-spacing 0.06em
  text-transform uppercase
  text-align center
  text-decoration none
  white-space nowrap
  cursor pointer
  @extend .transition

  &:hover
    background darken($yellow, 15)
  
  &-guitar      
    &::before
      content ''
      width 1.3125em
      height 1.25em
      background url("data:image/svg+xml,%3Csvg width='21' height='20' viewBox='0 0 21 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cg clip-path='url(%23a)'%3E%3Cpath d='M9.652 7.198V3.945h2.513v3.253h.187a2.388 2.388 0 0 1 2.266 3.144l-.246.739a.424.424 0 0 0 .165.486l.053.034a4.026 4.026 0 0 1 1.752 3.92 5.13 5.13 0 0 1-5.08 4.405h-.708a5.13 5.13 0 0 1-5.08-4.406 4.026 4.026 0 0 1 1.753-3.919l.052-.034a.424.424 0 0 0 .166-.486l-.245-.74a2.388 2.388 0 0 1 2.264-3.143h.188Zm1.255 6.544a1.427 1.427 0 1 0 .001-2.855 1.427 1.427 0 0 0 0 2.854Zm1.42-10.577H9.463V1.137A.685.685 0 0 1 10.15.45l1.49.001a.685.685 0 0 1 .685.685V2.52l.001.646Z' fill='%2313141A'/%3E%3C/g%3E%3Cdefs%3E%3CclipPath id='a'%3E%3Cpath fill='%23fff' transform='translate(.5)' d='M0 0h20v20H0z'/%3E%3C/clipPath%3E%3C/defs%3E%3C/svg%3E") 0 0 / cover no-repeat
  
  &-product
    padding 0.92857em 1.071428em
    font-size 14px

    @media $xs
      padding 17px 8px
  
  &-seriesSection
    padding-right 1.875em
    padding-left 1.875em
  
  &-email
    padding-top 20px
    padding-bottom 20px

    @media $xs
      padding-top 15px
      padding-bottom 16px

    &::before
      content ''
      width 18px
      height 14px
      background url("data:image/svg+xml,%3Csvg width='18' height='14' viewBox='0 0 18 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M15.5 0H2.167C1.25 0 .508.75.508 1.667l-.008 10c0 .916.75 1.666 1.667 1.666H15.5c.917 0 1.667-.75 1.667-1.666v-10C17.167.75 16.417 0 15.5 0Zm-.333 3.542L9.275 7.225a.843.843 0 0 1-.883 0L2.5 3.542a.708.708 0 1 1 .75-1.2l5.583 3.491 5.584-3.491a.708.708 0 1 1 .75 1.2Z' fill='%2313141A'/%3E%3C/svg%3E") 0 0 / cover no-repeat
  
  &-video
    @media $smPlus
      padding-right 29px
      padding-left 29px

    &::before
      content ''
      width 18px
      height 18px
      background url("data:image/svg+xml,%3Csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M9 .25a8.75 8.75 0 1 0 .001 17.501A8.75 8.75 0 0 0 9 .25Zm2.815 8.885-4.266 3.103a.157.157 0 0 1-.248-.127V5.908a.156.156 0 0 1 .248-.127l4.266 3.102a.155.155 0 0 1 .047.197.155.155 0 0 1-.047.055Z' fill='%2313141A'/%3E%3C/svg%3E") 0 0 no-repeat
  
  &-productCard
    font-size 14px
  
  &-loadMore
    &::before
      content ''
      width 19px
      height 20px
      background url("data:image/svg+xml,%3Csvg width='19' height='20' viewBox='0 0 19 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2.063 13.002A8.25 8.25 0 0 0 18 10m-.564-3.002A8.253 8.253 0 0 0 1.5 10m6 3h-6v6M18 1v6h-6' stroke='%2313141A' stroke-width='2'/%3E%3C/svg%3E") 0 0 no-repeat
  
  &-accessoryCard
    padding 10px
    font-size 14px
    line-height 20px

    @media $smPlus
      padding-top 12px
      padding-bottom 12px
      column-gap 10px

    &::before
      @media $smPlus
        content ''
        width 17px
        height 16px
        background url("data:image/svg+xml,%3Csvg width='17' height='16' viewBox='0 0 17 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M16.068 3.833A1.667 1.667 0 0 0 14.651 3H3.985L3.5 1.117A.833.833 0 0 0 2.668.5H1.001a.833.833 0 0 0 0 1.667h1.034l2.3 8.55a.833.833 0 0 0 .833.616h7.5a.832.832 0 0 0 .742-.458l2.733-5.467a1.667 1.667 0 0 0-.075-1.575ZM4.75 15.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5ZM13.086 15.5a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5Z' fill='%2313141A'/%3E%3C/svg%3E") 0 0 no-repeat
  
  &-contactForm
    @media $smPlus
      padding-top 15px
      padding-bottom 16px
  
  &-seriesBlock
    padding-top 12px
    padding-bottom 12px
    font-size 14px
    line-height 20px
  
  &-arrowRight
    &::after
      content ''
      width 19px
      height 16px
      background url("data:image/svg+xml,%3Csvg width='19' height='16' viewBox='0 0 19 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='m10.578 1 7 7-7 7M0 8h16.5' stroke='%2313141A' stroke-width='2'/%3E%3C/svg%3E") 0 0 no-repeat
  
  &-beneficiaries,
  &-postsSection
    @media $xs
      width 325px