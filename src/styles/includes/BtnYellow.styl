.BtnYellow
  display inline-grid
  grid-auto-flow column
  align-items center
  column-gap 0.5625em
  max-width 100%
  padding 1em 1.6875em
  font-weight bold
  font-family $robotoSlab
  font-size 16px
  border none
  border-radius 4px
  background $yellow
  color $dark
  letter-spacing 0.06em
  text-transform uppercase
  text-decoration none
  white-space nowrap
  cursor pointer
  @extend .transition

