.Intro
  background $lightBeige

  &_wrapper
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 17px 30px
    padding 10px 0

    @media $smMinus
      padding 30px 0

    @media $xs
      grid-template-columns 100%
      row-gap 25px
      padding 40px 0
  
  &_emphasis
    align-self end
    font-weight bold
    font-size 20px
    line-height 1.6

    @media $smPlus
      padding-right 10px
  
  &_text
    align-self start
    font-size 18px
    line-height 1.78
    letter-spacing -0.005em
  
  &_quoteBlock
    @media $smPlus
      grid-row 1 / 3
      grid-column 2 / 3
      margin-top -80px
      margin-bottom -70px