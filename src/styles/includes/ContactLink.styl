.ContactLink
  display inline-grid
  grid-template-columns auto 1fr
  column-gap 9px
  align-items center
  color $red
  font-weight 600
  font-family $sourceSansPro
  text-decoration none
  
  @media $sm
    column-gap 7px
    font-weight bold
    font-size 13px
    font-family $robotoSlab

  @media $xs
    display grid

  &:hover
    color $red
  
  &-phone
