.ProductLabel
  padding 0.45em 0.723em
  border-radius 4px 0
  background $dark
  color $beige
  font-weight bold
  font-size 18px
  line-height 1.12
  font-family $robotoSlab
  letter-spacing 0.04em
  text-transform uppercase
  text-align center

  @media $xs
    font-size 15px

  @media $xxs
    padding 6px 10px
    font-size 12px
    line-height 1.67

  &-seriesBlock
    display inline-block
    padding 0.42857em 0.92857em
    font-size 14px
    line-height 1.4286
    letter-spacing 0.06em