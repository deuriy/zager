.IconAndText
  color $lightBeige

  @media $smPlus
    text-align center

  @media $xs
    display grid
    grid-template-columns auto 1fr
    grid-template-rows auto 1fr
    column-gap 20px

  &_icon
    margin-bottom 20px

    @media $xs
      grid-row 1 / 3
      margin-top 5px
      margin-bottom 0

  &_title
    margin-bottom 8px
    font-size 18px
    line-height 1.23
    font-family $robotoSlab

    @media $xs
      margin-bottom 6px
  
  &_text
    font-size 16px
    line-height 1.625
    letter-spacing 0.005em

    @media $xs
      line-height 1.375