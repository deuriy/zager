.IconAndText
  color $lightBeige

  @media $smPlus
    text-align center

  @media $xs
    display grid
    grid-template-columns auto 1fr
    grid-template-rows auto 1fr
    column-gap 20px

  &_icon
    margin-bottom 20px

    @media $xs
      grid-row 1 / 3
      margin-top 5px
      margin-bottom 0

  &_title
    margin-bottom 8px
    font-size 18px
    line-height 1.23
    font-family $robotoSlab

    @media $xs
      margin-bottom 6px
  
  &_text
    font-size 16px
    line-height 1.625
    letter-spacing 0.005em

    @media $xs
      line-height 1.375
  
  &-highlighted
    width 295px
    padding 15px
    border 1px solid rgba($beige, 0.2)
    border-radius 4px
    background rgba(0, 0, 0, 0.35)
    backdrop-filter blur(10px)

    .IconAndText_icon
      margin-top 7px