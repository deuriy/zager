.FilterTabsMenu
  &_list
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    gap 12px

  &_item
    display inline-grid
    padding 10px 26px
    border 2px solid #F3B25D
    border-radius 100px
    background-color rgba($lightBeige, 0.45)
    font-weight bold
    font-family $robotoSlab
    font-size 14px
    line-height 1.42857em
    list-style none
    letter-spacing 0.06em
    text-transform uppercase
    white-space nowrap
    cursor pointer
    @extend .transition

    &:hover,
    &-active
      background-color $yellow
      border-color $yellow
  
  &-accordionSection
    .FilterTabsMenu_list
      @media $smPlus
        gap 8px
        
    .FilterTabsMenu_item
      padding-top 9px
      padding-bottom 11px
      font-size 16px
      line-height 1.5
      font-family $baseFont
      letter-spacing 0.005em
      text-transform capitalize

      @media $smPlus
        padding 8px 25px 8px 27px
        font-size 18px
        line-height 1.78
        letter-spacing -0.005em

        &:not(.FilterTabsMenu_item-active)
          border-color transparent
          background transparent

          &:hover
            background $yellow