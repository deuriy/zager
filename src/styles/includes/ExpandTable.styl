.ExpandTable
  overflow hidden
  @extend .transition
  
  @media $mdPlus
    max-height 81px

  &_table
    width 100%
    border-collapse collapse

  &_head
    text-align left
  
  &_th
    border-bottom 2px solid $dark

    &-borderTop
      border-top 1px solid $grey
  
  &_colTitle
    font-weight bold
    font-size 32px
    line-height 44px
    font-family $robotoSlab
    text-align center
  
  &_row
    @media $smMinus
      &:nth-child(even)
        .ExpandTable_data
          background rgba($grey, .4)
    
    @media $mdPlus
      border-bottom 1px solid $grey

    &:last-child
      .ExpandTable_data
        border-bottom 1px solid $grey
  
  &_data
    height 60px
    padding 10px
    font-size 16px
    line-height 18px
    letter-spacing 0.005em

    @media $mdPlus
      height 68px

      &:nth-child(even)
        background rgba($grey, .4)
      
      &:nth-child(2),
      &:nth-child(3),
      &:nth-child(4)
        width 253px
      
      &:nth-child(5)
        width 239px
    
    &:first-child
      width 165px

      @media $xs
        border-right 1px solid $grey

      @media $sm
        width 200px

      @media $mdPlus
        width 132px
        padding-left 0
    
    &-value
      @media $smMinus
        color rgba($dark, .7)

      @media $mdPlus
        padding 14px 15px
        font-size 18px
        line-height 32px
        letter-spacing -0.005em
  
  &_labelWrapper
    display inline-grid
    grid-template-columns auto 16px
    align-items center
    gap 7px

    @media $smMinus
      justify-content space-between
      width 100%
    
  &_label
    font-weight bold
    font-size 18px
    line-height 22px
    font-family $robotoSlab
    color rgba($dark, .7)
  
  &_switchLink
    width 100%
  
  &-expanded
    overflow visible
  
  &-description
    .ExpandTable_data
      padding 20px
      line-height 1.625
      vertical-align top

      @media $smMinus
        background rgba($grey, .4)
      
      @media $mdPlus
        padding 25px 13px 20px 17px
  
  &-titles
    .ExpandTable_data
      padding-top 2px
      padding-bottom 34px

      &:nth-child(even)
        background transparent