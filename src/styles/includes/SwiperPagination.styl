.SwiperPagination
  display grid
  grid-auto-flow column
  column-gap 32px
  justify-content start

  @media $xs
    justify-content center
  
  &_bullet
    width 12px
    height 12px
    border 2px solid $yellow
    border-radius 50%
    cursor pointer
    @extend .transition

    &:hover,
    &-active
      background $yellow
  
  &-lightBeige
    .SwiperPagination_bullet
      border-color $lightBeige

      &:hover,
      &-active
        background $lightBeige
  
  &-center
    justify-content center