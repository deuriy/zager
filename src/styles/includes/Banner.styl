.Banner
  padding 62px 0 90px
  background-position center 0
  background-repeat no-repeat
  background-size cover

  &_textWrapper
    width 640px
    max-width 100%
  
  &_intro,
  &_title
    font-weight bold
    font-family $robotoSlab
  
  &_intro
    margin-bottom 26px
    color $yellow
    letter-spacing 0.06em
    text-transform uppercase

  &_title
    margin-bottom 66px
    color $lightBeige
    font-size 32px
    line-height 1.625
  
  &_buttons
    display grid
    column-gap 8px
    grid-auto-flow column
    justify-content start
    align-items center
    list-style none