.Banner
  position relative
  padding 50px 0 49px
  background-position 64.1% 0
  background-repeat no-repeat
  background-size cover
  
  &::before
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    width 100%
    background linear-gradient(20.96deg, #251305 0%, #251305 46.4%, rgba(37, 19, 5, 0) 86.04%)
    
    @media $xs
      opacity 0.85

    @media $smPlus
      width 59.53%
      background linear-gradient(90deg, #251305 0%, #251305 53.93%, rgba(37, 19, 5, 0) 100%)

  @media $smPlus
    padding 62px 0 90px
    background-position center 0
  
  &_breadcrumbs
    position relative
    margin-bottom 20px

    @media $smPlus
      margin-bottom 25px

  &_textWrapper
    position relative
    width 640px
    max-width 100%
  
  &_intro,
  &_title
    font-weight bold
    font-family $robotoSlab
  
  &_intro
    margin-bottom 26px
    color $yellow
    letter-spacing 0.06em
    text-transform uppercase

    @media $xs
      margin-bottom 21px

  &_title
    margin-bottom 66px
    color $lightBeige
    font-size 32px
    line-height 1.625

    @media $xs
      margin-bottom 40px
      font-size 28px
      line-height 1.5
  
  &_buttons
    display grid
    column-gap 8px
    grid-auto-flow column
    justify-content start
    align-items center
    list-style none

    @media $xxs
      grid-auto-flow row
      justify-content stretch
      row-gap 10px
  
  &_btn
    @media $xxs
      width 100%
  
  &_iconsAndTexts
    position relative
  
  &-guitars
    padding-bottom 28px
    overflow hidden

    @media $xs
      background-position 26.5% 0
      background-size auto 107%

    @media $smPlus
      padding-top 41px
      padding-bottom 0

    &::before
      @media $smPlus
        display none
    
    .Banner_textWrapper
      @media $smPlus
        width 740px

    .Banner_title
      font-size 32px
      line-height 1.375

      @media $smPlus
        margin-bottom 40px
        font-size 48px
        line-height 1.25
    
    .Banner_buttons
      margin-bottom 44px

      @media $smPlus
        margin-bottom 90px
  
  &-short
    padding-bottom 64px
    background-position 0 center

    @media $smPlus
      padding 31px 0 99px

    &::before
      @media $xs
        background linear-gradient(20.96deg, rgba(37, 19, 5, 0.65) 0%, rgba(37, 19, 5, 0.65) 46.4%, rgba(37, 19, 5, 0) 86.04%)
      
      @media $smPlus
        display none
    
    .Banner_breadcrumbs
      @media $smPlus
        margin-bottom 35px
    
    .Banner_textWrapper
      @media $smPlus
        width 720px
    
    .Banner_title
      margin-bottom 0
      font-size 32px
      line-height 1.375

      @media $smPlus
        font-size 48px
        line-height 1.25