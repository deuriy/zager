.PriceCard
  position relative
  padding 30px 20px 20px
  background $lightBeige
  border-radius 4px
  text-align center

  @media $smPlus
    padding 38px 25px 25px

  &_tag
    position absolute
    z-index 10
    top 0
    right 0
    left 0
    margin auto
    width max-content
    transform translateY(-50%)

  &_title,
  &_price
    margin-bottom 15px
    font-weight bold
    font-family $robotoSlab
  
  &_title
    font-size 19px
    line-height 24px
  
  &_price
    font-size 36px
    line-height 48px
  
  &_description
    margin-bottom 20px
    font-family $workSans
    font-size 13px
    line-height 15px
    letter-spacing -0.02em

    @media $smPlus
      margin-bottom 35px
  
  &_btn
    width 325px

    @media $smPlus
      width 100%
  
  &_buttons
    list-style none
    display grid
    grid-template-columns 100%
    row-gap 16px
  
  &-productOptions
    padding-top 20px
    box-shadow 0 2px 6px -2px rgba(0, 0, 0, 0.1)

    .PriceCard_price
      margin-bottom 0

    .PriceCard_description
      padding-bottom 23px
      border-bottom 2px dashed $grey2
    
    .PriceCard_btn
      @media $sm
        width 325px