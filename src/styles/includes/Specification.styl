.Specification
  display grid
  grid-template-columns 104px 1fr
  grid-template-rows auto 1fr
  gap 16px 29px
  align-items start
  
  &_iconWrapper
    grid-row 1 / 3
    text-align center

  &_title
    font-weight bold
    font-size 23px
    line-height 32px
    font-family $robotoSlab

  &_text
    grid-column 2 / 3
    font-size 18px
    line-height 32px
    letter-spacing -0.005em
  
  &-extended
    grid-template-columns 104px 1fr 116px
  
  &_characteristics
    display grid
    gap 4px
    grid-row 1 / 3
    grid-column 3 / 4
    list-style none
    font-weight bold
    font-size 14px
    line-height 22px