.Pagination
  display grid
  grid-template-columns repeat(3, auto)
  align-items center
  justify-content start
  column-gap 24px
  
  &_list
    list-style none
    display grid
    grid-auto-flow column
    justify-content start
    align-items baseline
    column-gap 20px
  
  &_item
    display grid
    width 40px
    height 40px
    justify-items center
    align-items center
    font-weight bold
    font-family $robotoSlab
    color $dark
    letter-spacing 0.06em

    &-current
      .Pagination_link
        background $yellow

        &:hover
          background darken($yellow, 15)
    
    &-more
      margin-right 14px
      margin-left 14px
  
  &_link
    display grid
    width 100%
    height 100%
    justify-content center
    align-content center
    border-radius 100px
    color $dark
    text-decoration none
    @extend .transition

    &:hover
      background $yellow