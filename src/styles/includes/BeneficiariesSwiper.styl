.BeneficiariesSwiper
  &_slide
    width auto

    &::after
      @media $mdPlus
        content ''
        position absolute
        z-index 10
        top 0
        bottom 0
        left 0
        width 440px
        background linear-gradient(270deg, $lightBeige 33.18%, rgba($lightBeige, 0.35) 100%)
        pointer-events none
        @extend .transition
    
    &-active
      @media $mdPlus
        &::after
          background transparent