.ProductImgSwiper
  overflow hidden

  @media $xs
    height 400px
  
  &_img
    display block
    margin-right auto
    margin-left auto

    @media $xs
      max-width none

  &_prev,
  &_next
    position absolute
    z-index 1
    top 0
    bottom 25px
    margin auto

    @media $xs
      bottom 0
  
  &_prev
    left 20px

    @media $xs
      left -16px
  
  &_next
    right 20px

    @media $xs
      right -16px
  
  .ProductImgSwiper_pagination
    position absolute
    z-index 1
    bottom 32px