.SubscribeForm#SubscribeForm
  form
    width 736px
    max-width 100%
    margin 0
    padding 0
    background transparent !important
    
    ._inline-style,
    &._inline-form._inline-style ._inline-style._button-wrapper
      margin-top 0 !important
    
    ._form_element ._form-label
      display none
    
    ._button-wrapper
      margin 0
    
    ._inline-style:not(._clear) + ._inline-style:not(._clear)
      margin-left 0
    
    input[type="text"]
      // width 516px
      width 100%
      height 64px
      padding 16px 24px
      border-radius 4px
      background $grey
      color $dark
      font-family $baseFont
      font-size 18px
      line-height 32px
      letter-spacing -0.005em
      
      @media $xs
        height 52px
        padding 10px 24px
      
      +placeholder()
        color $dark
        opacity 0.6
    
    ._form-content
      display grid
      grid-template-columns 1fr 200px
      column-gap 20px
      
      @media $xs
        grid-template-columns 100%
        row-gap 10px
    
    ._form_element
      margin-bottom 0
    
    ._button-wrapper
      display grid
    
    #_form_7_submit
      display inline-grid
      grid-auto-flow column
      align-items center
      justify-content center
      column-gap .5625em
      padding 20px 1.6875em !important
      background $yellow !important
      color $dark !important
      font-weight bold
      font-size 16px
      font-family $robotoSlab
      letter-spacing .06em
      text-transform uppercase
      
      @media $xs
        padding-top 15px !important
        padding-bottom 15px !important
      
      &::before
        content ''
        width 18px
        height 14px
        background url("data:image/svg+xml,%3Csvg width='18' height='14' viewBox='0 0 18 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M15.5 0H2.167C1.25 0 .508.75.508 1.667l-.008 10c0 .916.75 1.666 1.667 1.666H15.5c.917 0 1.667-.75 1.667-1.666v-10C17.167.75 16.417 0 15.5 0Zm-.333 3.542L9.275 7.225a.843.843 0 0 1-.883 0L2.5 3.542a.708.708 0 1 1 .75-1.2l5.583 3.491 5.584-3.491a.708.708 0 1 1 .75 1.2Z' fill='%2313141A'/%3E%3C/svg%3E") 0 0 / cover no-repeat
      @extend .transition
      
      &:hover
        background darken($yellow, 15) !important