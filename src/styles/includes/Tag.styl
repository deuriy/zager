.Tag
  display inline-grid
  grid-template-columns auto 1fr auto
  align-items center
  column-gap 0.45em
  padding 0.45em 0.67em
  border-radius 0 4px
  background $brown
  color $lightBeige
  font-weight bold
  font-family $robotoSlab
  font-size 18px
  line-height 1.11
  text-transform uppercase
  letter-spacing 0.04em

  @media $xs
    font-size 15px

  @media $xxs
    column-gap 2px
    padding 6px 10px
    font-size 12px
    line-height 1.67
  
  &-stars
    &::before,
    &::after
      content ''
      width 1.12em
      height 1.056em
      background url("data:image/svg+xml,%3Csvg width='20' height='19' viewBox='0 0 20 19' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='m10 0 2.245 6.91h7.266l-5.878 4.27 2.245 6.91L10 13.82l-5.878 4.27 2.245-6.91L.49 6.91h7.266L10 0Z' fill='%23F4EDE4'/%3E%3C/svg%3E") 0 0 / cover no-repeat
  
  &-productCard
    grid-template-columns auto
    padding 4px 6px 4px 12px
    font-weight normal
    font-size 13px
    line-height 20px
    letter-spacing 0.06em

  &-accessoryCard
    @extend .Tag-stars
      
    @media $xs
      grid-template-columns auto
      padding 4px 6px 4px 12px
      font-weight normal
      font-size 13px
      line-height 20px
      letter-spacing 0.06em

      &::before,
      &::after
        display none
      
    @media $smPlus
      column-gap 5px
      font-size 14px