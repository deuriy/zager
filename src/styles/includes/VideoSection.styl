.VideoSection
  padding 80px 0
  background linear-gradient(285.63deg, #372D25 0%, #563D34 100%)

  @media $xs
    padding 40px 0

  &_title
    width 700px
    max-width 100%
    margin-bottom 40px
  
  &_swiper
    margin-bottom 48px

    @media $xs
      margin-right -25px
      margin-bottom 56px
  
  &_bottom
    display grid
    grid-template-columns repeat(2, auto)
    justify-content space-between
    align-items center

    @media $xs
      grid-template-columns 100%
      justify-items center
  
  &_pagination
    @media $xs
      margin-bottom 45px